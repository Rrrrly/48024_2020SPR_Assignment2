<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="controller.RemoveBookController"
    alignment="CENTER" spacing="10" styleClass="root">
    
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    
    <ListView fx:id="booksLv" prefHeight="400" items="${controller.library.catalogue.allBooks}"/>
    
    <Button text="Remove Book" onAction="#handleRemoveBook"/>
    <Button text="Close" onAction="#handleClose"/>
</VBox>
